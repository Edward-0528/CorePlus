{
  "expo": {
    "name": "Core+",
    "slug": "core-plus",
    "version": "1.0.22",
    "orientation": "portrait",
    "icon": "./assets/ios-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "core-plus",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coreplus.app",
      "buildNumber": "24",
      "statusBarStyle": "dark",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Core+ needs camera access to scan food items and analyze their nutritional content using AI-powered food recognition technology.",
        "NSPhotoLibraryUsageDescription": "Core+ needs photo library access to save scanned food images and allow you to select photos from your gallery for nutritional analysis."
      }
    },
    "android": {
      "package": "com.anonymous.coreplus",
      "versionCode": 37,
      "adaptiveIcon": {
        "foregroundImage": "./assets/ios-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "com.google.android.gms.permission.ACTIVITY_RECOGNITION",
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "core-plus"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-secure-store",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "667f7be0-5628-448b-9dd5-a64f5c1fb430"
      }
    }
  }
}
